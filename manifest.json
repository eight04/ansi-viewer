{
	"manifest_version": 2,
	"version": "2.0.0",
	"name": "ANSI Viewer",
	
	"description": "View ANSI file in the browser",
	
	"author": "eight",
	"homepage_url": "https://github.com/eight04/ansi-viewer",
	
	"permissions": [
		"contextMenus",
		"tabs",
		"*://*/*",
		"file:///*"
	],
	
	"background": {
		"scripts": [
			"background/lib.js",
			"background/ansi.js",
			"background/background.js"
		]
	},
	
	"content_scripts": [
		{
			"matches": [
				"*://*/*",
				"file:///*.ans",
				"file:///*.bbs",
				"file:///*.ansi"
			],
			"js": [
				"content/injector.js"
			],
			"run_at": "document_start"
		}
	],
	
	"web_accessible_resources": [
		"public/*.js",
		"public/*.css"
	],
	
	"commands": {
		"view-as-ansi": {
			"suggested_key": {
				"default": "Alt+A"
			},
			"description": "View current page as ANSI"
		}
	}
}