{
  "title": "ANSI Viewer",
  "name": "ansi-viewer",
  "version": "3.0.0",
  "description": "View ANSI file in the browser",
  "author": "eight04 <eight04@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bbs-reader": "^0.3.1",
    "comlink": "^4.3.1",
    "pmore": "^0.1.1",
    "uao-js": "^1.0.1",
    "webextension-polyfill": "^0.8.0"
  },
  "eslintIgnore": [
    "dist"
  ],
  "scripts": {
    "test": "eslint . --cache && npm run build && web-ext lint",
    "start": "web-ext run",
    "preversion": "npm test",
    "version": "sync-version extension/manifest.json && git add .",
    "build": "shx rm -rf dist && rollup -c",
    "build-zip": "web-ext build",
    "postversion": "npm run build && npm run build-zip && git push --follow-tags",
    "changelog": "shx cat README.md | mkcat | mkql \"[content=Changelog] + ul > :first-child > *\" | mkout"
  },
  "devDependencies": {
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@surma/rollup-plugin-comlink": "github:eight04/rollup-plugin-comlink#dev",
    "@surma/rollup-plugin-off-main-thread": "^2.2.3",
    "@web/rollup-plugin-copy": "^0.3.0",
    "eslint": "^8.8.0",
    "mkdoc": "^1.0.49",
    "rollup": "^2.67.2",
    "rollup-plugin-cjs-es": "^1.0.1",
    "rollup-plugin-iife": "^0.6.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-write-output": "^0.1.2",
    "shx": "^0.3.4",
    "sync-version": "^1.0.1",
    "terser": "^5.10.0",
    "web-ext": "^6.7.0"
  },
  "webExt": {
    "sourceDir": "dist",
    "build": {
      "overwriteDest": true
    }
  }
}
